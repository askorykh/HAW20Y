<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="o.skorykh" id="001">
        <comment>Add extension postgis if not exists</comment>
        <createTable tableName="users">
            <column name="id" type="bigserial"/>
            <column name="date_created" defaultValueComputed="now()" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="grad_year" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="geo_location_old" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="geo_location_new" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="enabled" type="boolean" defaultValue="false">
                <constraints nullable="true"/>
            </column>

        </createTable>
        <addPrimaryKey columnNames="id"
                       constraintName="pk_users" tableName="users"/>
    </changeSet>

</databaseChangeLog>
